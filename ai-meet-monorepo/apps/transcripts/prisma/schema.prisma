generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/.prisma/transcripts-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TranscriptSession {
  id               String           @id @default(cuid())
  meetingId        String           @unique
  meetingTitle     String?
  tenantId         String
  participantCount Int              @default(0)
  status           TranscriptStatus @default(INITIALIZING)
  startedAt        DateTime         @default(now())
  completedAt      DateTime?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  transcripts      Transcript[]
  wordSegments     WordSegment[]

  @@map("transcript_sessions")
}

model Transcript {
  id              String            @id @default(cuid())
  sessionId       String
  participantId   String?
  participantName String?
  content         String
  language        String            @default("en")
  confidence      Float?
  duration        Int?
  startTime       DateTime
  endTime         DateTime?
  fileUrl         String?
  status          TranscriptStatus  @default(PROCESSING)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  session         TranscriptSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  wordSegments    WordSegment[]

  @@map("transcripts")
}

model WordSegment {
  id           String            @id @default(cuid())
  sessionId    String
  transcriptId String?
  word         String
  startTime    Float
  endTime      Float
  confidence   Float
  speakerId    String?
  createdAt    DateTime          @default(now())
  session      TranscriptSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  transcript   Transcript?       @relation(fields: [transcriptId], references: [id], onDelete: Cascade)

  @@index([sessionId, startTime])
  @@map("word_segments")
}

model MeetingReference {
  id               String        @id @default(cuid())
  meetingId        String        @unique
  sessionId        String?
  meetingTitle     String?
  startTime        DateTime
  endTime          DateTime?
  participantNames String[]
  status           MeetingStatus @default(ACTIVE)
  metadata         Json?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  @@map("meeting_references")
}

enum TranscriptStatus {
  INITIALIZING
  PROCESSING
  COMPLETED
  FAILED
  ARCHIVED
}

enum MeetingStatus {
  SCHEDULED
  ACTIVE
  ENDED
  CANCELLED
}
