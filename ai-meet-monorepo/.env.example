# Environment Configuration
NODE_ENV=development

# Service Ports
MEETING_PORT=3001
TRANSCRIPTS_PORT=3002

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Azure Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=youraccountname;AccountKey=youraccountkey;EndpointSuffix=core.windows.net
AZURE_CONTAINER_NAME=transcripts

# Redis Configuration
REDIS_URL=redis://localhost:6379

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=ai-meet
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Logging
LOG_LEVEL=info

# WebRTC Configuration
TURN_SERVER_URL=
TURN_SERVER_USERNAME=
TURN_SERVER_CREDENTIAL=

# Speech-to-Text Configuration (choose one)
# Azure Speech Services
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=

# Google Speech-to-Text
GOOGLE_APPLICATION_CREDENTIALS=

# AWS Transcribe
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=

# OpenAI Whisper
OPENAI_API_KEY=